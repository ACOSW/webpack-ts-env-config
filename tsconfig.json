{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ],
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "./**/*",
    "./*"
  ]
}
